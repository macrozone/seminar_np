body
	.container
		+experiments

template(name="experiments")
	each experiments
		+Experiment

template(name="Experiment")

	h1 {{name}}
	p {{description}}
	p Number of experiments: {{yieldHistory.size}}
	p Average yield: {{yieldHistory.avg}}
	p Best yield: {{yieldHistory.best}}
	p Worst yield: {{yieldHistory.worst}}
	.row
		.col-xs-12
			+TickerGui ticker=ticker
	.row
		.col-xs-12
			if act
				p acts: {{act}}
			p adviceBits: 
				span.adviceBits=adviceBits
			p Number of items: {{numberOfItems}}

	.row
		.currentItemContainer.col-xs-6
			h2 Current item:
			if currentItem
				p value: {{currentItem.value}}
				+KnapsackItem(currentItem)
				if willMatch
					p will match
				else
					p will not match

		.knapsackContainer.col-xs-6
			+Knapsack knapsack


template(name="Knapsack")
	.knapsack(style="width: {{totalWidth}}px")
		h2 knapsack
		p yield: {{yield}}, items: {{items.length}}
		.items
			each items
				+KnapsackItem
				

template(name="KnapsackItem")
	.knapsack-item(style="width: {{width}}px; background-color: {{color}}")

template(name="TickerGui")
	.ticker
		p Counter: {{counter}}
		.btn-group
			button.btn.btn-step.btn-primary
				.glyphicon.glyphicon-step-forward 
				| Step
			button.btn.btn-play.btn-default
				.glyphicon.glyphicon-play 
				| Play
			button.btn.btn-play-fast.btn-default
				.glyphicon.glyphicon-fast-forward
				| Play Fast
			button.btn.btn-stop.btn-warning
				.glyphicon.glyphicon-stop 
				| Stop
			button.btn.btn-reset.btn-danger
				.glyphicon.glyphicon-fast-backward 
				| Reset
